<% layout("layouts/boilerplate") %>

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
      <h2 class="mb-2 mb-md-0">
        <i class="bi bi-bell"></i> Notifications
      </h2>
      <div class="d-flex flex-wrap gap-2">
        <a href="/notifications/preferences" 
           class="text-decoration-none text-dark bttn btn-outline-secondary btn-sm">
          <i class="bi bi-gear"></i> Preferences
        </a>
        <% if(notifications && notifications.length > 0) { %>
          <button id="markAllReadBtn" class="bttn btn-outline-primary btn-sm">
            <i class="bi bi-check-all"></i> Mark All Read
          </button>
        <% } %>
      </div>
    </div>

        <% if(!notifications || notifications.length === 0) { %>
            <div class="text-center py-5">
                <i class="bi bi-bell-slash display-1 text-muted"></i>
                <h4 class="text-muted mt-3">No notifications yet</h4>
                <p class="text-muted">When someone interacts with your content, you'll see notifications here.</p>
            </div>
        <% } else { %>
            <div class="notification-list">
                <% notifications.forEach(notification => { %>
                    <div class="notification-item card mb-3 <%= !notification.isRead ? 'unread' : '' %>" 
                         data-id="<%= notification._id %>">
                        <div class="card-body">
                            <div class="d-flex align-items-start">
                                <div class="flex-shrink-0 me-3">
                                    <% if(notification.sender && notification.sender.avatar) { %>
                                        <img src="<%= notification.sender.avatar.url %>" 
                                             alt="<%= notification.sender.name %>" 
                                             class="rounded-circle" 
                                             width="40" height="40">
                                    <% } else { %>
                                        <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center" 
                                             style="width: 40px; height: 40px;">
                                            <i class="bi bi-person text-white"></i>
                                        </div>
                                    <% } %>
                                </div>
                                
                                <div class="flex-grow-1">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <p class="mb-1 notification-message">
                                                <%= notification.message %>
                                            </p>
                                            <small class="text-muted">
                                                <i class="bi bi-clock"></i>
                                                <%= moment(notification.createdAt).fromNow() %>
                                            </small>
                                        </div>
                                        
                                        <div class="dropdown">
                                            <span class="text-primary dropdown-toggle" 
                                                    type="button" 
                                                    data-bs-toggle="dropdown">
                                                <i class="bi bi-three-dots"></i>
                                            </span>
                                            <ul class="dropdown-menu">
                                                <% if(!notification.isRead) { %>
                                                    <li>
                                                        <a class="dropdown-item mark-read-btn" 
                                                           href="#" 
                                                           data-id="<%= notification._id %>">
                                                            <i class="bi bi-check"></i> Mark as Read
                                                        </a>
                                                    </li>
                                                <% } %>
                                                <li>
                                                    <a class="dropdown-item delete-notification-btn text-danger" 
                                                       href="#" 
                                                       data-id="<%= notification._id %>">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                    
                                    <% if(notification.relatedBlog) { %>
                                        <div class="mt-2">
                                            <a href="/blogs/<%= notification.relatedBlog._id %>" 
                                               class="btn btn-sm btn-outline-primary notification-link"
                                               data-id="<%= notification._id %>">
                                                <i class="bi bi-arrow-right"></i> View Post
                                            </a>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>

            <!-- Pagination -->
            <% if(totalPages > 1) { %>
                <nav aria-label="Notifications pagination">
                    <ul class="pagination justify-content-center">
                        <% if(currentPage > 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="/notifications?page=<%= currentPage - 1 %>">Previous</a>
                            </li>
                        <% } %>
                        
                        <% for(let i = 1; i <= totalPages; i++) { %>
                            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                <a class="page-link" href="/notifications?page=<%= i %>"><%= i %></a>
                            </li>
                        <% } %>
                        
                        <% if(currentPage < totalPages) { %>
                            <li class="page-item">
                                <a class="page-link" href="/notifications?page=<%= currentPage + 1 %>">Next</a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            <% } %>
        <% } %>
    </div>
</div>

<style>
.notification-item.unread {
    border-left: 4px solid #0d6efd;
    background-color: #f8f9fa;
}

.notification-item.unread .notification-message {
    font-weight: 600;
}

.notification-item {
    transition: all 0.2s ease;
}

.notification-item:hover {
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

.notification-link {
    text-decoration: none;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Mark single notification as read
    document.querySelectorAll('.mark-read-btn').forEach(btn => {
        btn.addEventListener('click', function(e) {
            e.preventDefault();
            const notificationId = this.dataset.id;
            markAsRead([notificationId]);
        });
    });

    // Mark all notifications as read
    const markAllBtn = document.getElementById('markAllReadBtn');
    if (markAllBtn) {
        markAllBtn.addEventListener('click', function() {
            fetch('/notifications/api/mark-all-read', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Failed to mark all notifications as read');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Failed to mark all notifications as read');
            });
        });
    }

    // Delete notification
    document.querySelectorAll('.delete-notification-btn').forEach(btn => {
        btn.addEventListener('click', function(e) {
            e.preventDefault();
            const notificationId = this.dataset.id;
            
            if (confirm('Are you sure you want to delete this notification?')) {
                fetch(`/notifications/api/${notificationId}`, {
                    method: 'DELETE'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Failed to delete notification');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Failed to delete notification');
                });
            }
        });
    });

    // Mark as read when clicking notification link
    document.querySelectorAll('.notification-link').forEach(link => {
        link.addEventListener('click', function() {
            const notificationId = this.dataset.id;
            markAsRead([notificationId]);
        });
    });

    function markAsRead(notificationIds) {
        fetch('/notifications/api/mark-read', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ notificationIds })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                // Update UI to show as read
                notificationIds.forEach(id => {
                    const notificationElement = document.querySelector(`[data-id="${id}"]`);
                    if (notificationElement) {
                        notificationElement.classList.remove('unread');
                    }
                });
            }
        })
        .catch(error => {
            console.error('Error marking as read:', error);
        });
    }
});
</script>